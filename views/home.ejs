<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1 class="text-center">Favorite Series</h1>
        <div class="row">
            <% favoriteSeries.forEach(serie => { %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="<%= serie.cover_url %>" class="card-img-top" alt="<%= serie.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= serie.title %></h5>
                            <p class="card-text"><%= serie.director %></p>
                            <a href="/series/<%= serie.id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <a href="/add-serie" class="btn btn-danger mt-3">Add new Serie</a>
        <h1 class="text-center">Favorite Movies</h1>
        <div class="row">
            <% favoriteMovies.forEach(movie => { %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="<%= movie.cover_url %>" class="card-img-top" alt="<%= movie.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= movie.title %></h5>
                            <p class="card-text"><%= movie.director %></p>
                            <a href="/movies/<%= movie.id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
           
        </div>
        <a href="/add-movie" class="btn btn-danger mt-3">Add new Movie</a>
        <a href="/logout" class="btn btn-danger mt-3">Logout</a>
    </div>
</body>
</html>
